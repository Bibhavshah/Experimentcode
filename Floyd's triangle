#include <stdio.h>

int main()
{
    int i,j,rows=0;
    printf("Let the program know, how many rows of floyd's triangle you want to print: ");
    scanf("%d", &rows);
    for(i=1; i<=rows; i++){
        for(j=1; j<=i; j++){
            if((i+j)%2==0){
                printf("0 ");
            }
            else 
            {
            printf("1 ");
            }
        }
        printf("\n ");
    }

    return 0;
}
